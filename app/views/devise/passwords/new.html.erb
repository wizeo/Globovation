<div class="container">
    <div class="row mt-120">
        <div class="col-md-4"> </div>
        <div class="col-md-4">
            <section class="signup-form">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: "signup" }) do |f| %>
  							<%= devise_error_messages! %>
                <h3 class="text-center">Forgot your password?</h3>
                  <%= f.email_field :email, autofocus: "true", placeholder: "Email", type: "email", class: "form-control input-lg" %>
              
                  <%= f.submit "Reset password", class: "btn btn-lg btn-primary btn-block" %>
                  <div>
                    Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %>
                  </div>
                <% end %>  
            </section>
        </div>
        <div class="col-md-4"> </div>
    </div>
</div>

