<div class="container">
    <div class="row">
        <div class="col-md-4"> </div>
        <div class="col-md-4">
            <h2 class="text-center login-title">Sign up</h2>
            <section class="signup-form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "signup"}) do |f| %>
                <%= devise_error_messages! %>
                <img src="http://i.imgur.com/RcmcLv4.png" class="img-responsive" alt="" />
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", type: "email", class: "form-control input-lg" %>
               
                  <% if false %>
                    <% if @validatable %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                  <% end %>

                  <%= f.password_field :password, autocomplete: "off", type: "password", placeholder: "Password", class: "form-control" %>
                  <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
                  <div>
                    Already have an account? <%= render "devise/shared/links" %>
                  </div>
                <% end %>  
            </section>
        </div>
        <div class="col-md-4"> </div>
    </div>
</div>



    
          
  


 



