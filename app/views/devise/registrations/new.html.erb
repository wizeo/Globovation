<div class="row sign-form">
    <div class="col-md-4"> </div>
    <div class="col-md-4">
      <section class="signup-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "signup"}) do |f| %>
          <%= devise_error_messages! %>
          <h2 class="text-center login-title">Sign up</h2>
          <%= f.text_field :name, autofocus: true, placeholder: "Name", type: "name", class: "form-control input-lg" %>
          <%= f.email_field :email, placeholder: "Email", type: "email", class: "form-control input-lg" %>
         
          <% if false %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          <% end %>

          <%= f.password_field :password, autocomplete: "off", type: "password", placeholder: "Password", class: "form-control input-lg" %>
          <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
          <div>
            Already have an account? <%= render "devise/shared/links" %>
          </div>
        <% end %>  
      </section>
    </div>
    <div class="col-md-4"> </div>
</div>