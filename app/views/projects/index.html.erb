<%= render 'layouts/home' %>  
<div class="container">
  <div class="row clearfix">
    <% @projects.where(:is_published => true).each do |project| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail" id="index-thumb">
          <%= link_to image_tag(project.image.url(:large)), project %>
          <div class="caption">
            <h4><%= project.title %></h4>
            <p class="by-text"><%= gravatar_for(project.user) %> by <%= project.user.name %></p>
            <p class="read-button"><%= link_to 'Read More...', project_path(project), class: "btn btn-primary btn-lg" %></p>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
</div>
    