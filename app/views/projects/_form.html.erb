 <%= form_for @project, html: { multipart: true, class: "form-wrap" } do |f| %>
  <div class="row row-padder">
    <div class="col-md-12 form-section form-section-first">
      <% if @project.errors.any? %>
        <div id="alert-margin" class= "alert alert-error alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-4">
          <div class="project-sub-title pull left">
            <h4>Project image</h4>
            <small>
              This is the main image associate with the challenge you're trying to overcome! JPEG, PNG, GIF or BMP, At least 800px wide, 4:3 aspect ratio.
            </small>
          </div>
        </div>
        <div class="col-md-8 form-main-image">
          <div class="main-image-wrap">
            <%= image_tag @project.image.url(:large), class: "img-responsive center-block" %>
          </div>
          <div class="input-group">
            <span class="input-group-btn">
              <span class="btn btn-default btn-file">
                <i class="fa fa-upload"></i> Browse <%= f.file_field :image%>
              </span>
            </span>
            <input type="text" class="form-control" placeholder="<-- Click to upload an image" disabled readonly>
          </div> 
        </div>
      </div>
    </div>
  </div>

  <div class="row form-spacer"></div>

  <div class="row row-padder">
     <div class="col-md-12 form-section">
     <div class="row">
        <div class="col-md-4">
          <div class="project-sub-title pull left">
            <h4>Project title</h4>
            <small>
              Your project title should describe the problem you would like to solve. It should be simple, specific and no more than 60 charachters.   
            </small>
          </div>
        </div>
        <div class="col-md-8 input-vallign">
          <div class="char-counter pull-right">
            <small> <span class="charscount1">60</span><span>/60</span></small>
          </div>
          <%= f.text_field :title, placeholder: "", type: "text", maxlength: "60", class: "form-control input-lg", id: "input1" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row form-spacer"></div>

  <div class="row row-padder" >
     <div class="col-md-12 form-section">
      <div class="row" >
        <div class="col-md-4">
          <div class="project-sub-title pull left">
            <h4>Short blurb</h4>
            <small>
              Your short blurb should provide more infromation regarding the main idea or the necessity of your project. Up to 135 charachters.   
            </small>
          </div>
        </div>
        <div class="col-md-8 input-vallign">
          <div class="char-counter pull-right">
            <small> <span class="charscount2">135 </span> <span>/135</span></small>
          </div>
          <%= f.text_area :blurb, placeholder: "", type: "text", maxlength: "135", rows:"3", class: "form-control input-lg", id: "input2" %>
        </div>
      </div>
    </div>
  </div>          

  <div class="row form-spacer"></div>

  <div class="row row-padder">
